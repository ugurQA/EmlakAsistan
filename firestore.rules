rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && request.auth.token.email == 'admin@office.com';
    }

    // Properties collection rules
    match /properties/{document=**} {
      allow read: if true;  // Public read access
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && 
        (resource.data.agent == request.auth.token.email || isAdmin());
      allow delete: if isAuthenticated() && 
        (resource.data.agent == request.auth.token.email || isAdmin());
    }

    // Agents collection rules
    match /agents/{document=**} {
      allow read: if isAuthenticated();
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Users collection rules
    match /users/{document=**} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Counters collection rules
    match /counters/{document=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
  }
}